# Apache 2.4用の.htaccess（Docker開発環境用）
# 本番環境（Apache 2.2互換モード）とは異なる新しい構文を使用

<FilesMatch "^\.claudeignore$">
    Require all denied
</FilesMatch>
<FilesMatch "^\.codexignore$">
    Require all denied
</FilesMatch>
<FilesMatch "^\.gitignore$">
    Require all denied
</FilesMatch>
<FilesMatch "^AGENTS\.md$">
    Require all denied
</FilesMatch>
<FilesMatch "^README\.md$">
    Require all denied
</FilesMatch>
<FilesMatch "^CLAUDE\.md$">
    Require all denied
</FilesMatch>
<FilesMatch "^\.htaccess\.docker$">
    Require all denied
</FilesMatch>
<FilesMatch "^docker-compose\.yml$">
    Require all denied
</FilesMatch>
<FilesMatch "\.(bak|backup|old|orig|save|swp|tmp|~)$">
    Require all denied
</FilesMatch>

# ディレクトリへのアクセス制限
RedirectMatch 403 /\.git
RedirectMatch 403 /rfcs/
RedirectMatch 403 /specs/
RedirectMatch 403 /datas/
RedirectMatch 403 /logs/
RedirectMatch 403 /docker/
RedirectMatch 403 /config\.example/
